@model IEnumerable<CascadingDropDownApp.Models.Upazila>

@{
    ViewBag.Title = "ViewUpazila";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewUpazila</h2>

<p>
    @Html.ActionLink("Create New", "AddUpazila")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.District.DistrictCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpazilaCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UpazilaName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.District.DistrictCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpazilaCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpazilaName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UpazilaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UpazilaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UpazilaId })
        </td>
    </tr>
}

</table>
