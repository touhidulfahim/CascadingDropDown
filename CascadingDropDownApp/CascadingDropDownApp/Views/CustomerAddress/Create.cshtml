                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PermanentDivisionId").append('<option value=' +
                                    value.DivisionId +
                                    '>' +
                                    value.DivisionName +
                                    '</option>');
                            });
                    }

                });
            });
            //Get Division By Country End

            //-----------------------------------------------------------District

            //Get District By Division Start
            $("#PresentDivisionId").change(function () {
                $("#PresentDistrictId").empty();
                var preDivision = $("#PresentDivisionId").val();
