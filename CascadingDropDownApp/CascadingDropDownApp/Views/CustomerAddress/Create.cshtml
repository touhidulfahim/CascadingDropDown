                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PresentDistrictId").append('<option value=' +
                                    value.DistrictId +
                                    '>' +
                                    value.DistrictName +
                                    '</option>');
                            });
                    }

                });
            });
            $("#PermanentDivisionId").change(function () {
                $("#PermanentDistrictId").empty();
                var perDivision = $("#PermanentDivisionId").val();
                var jasonData = { divisionId: perDivision };
                $("#PermanentDistrictId").append('<option value=0>SELECT DISTRICT</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetPermanentDistrictByDivisionId", "CustomerAddress")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jasonData),
                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PermanentDistrictId").append('<option value=' +
                                    value.DistrictId +
                                    '>' +
                                    value.DistrictName +
                                    '</option>');
                            });
                    }

                });
        });
            //Get Division By District End
            //---------------------------------------------Upazila
            $("#PresentDistrictId").change(function () {
            $("#PresentUpazilaId").empty();
                var preDistrict = $("#PresentDistrictId").val();
            var jasonData = { districtId: preDistrict };
            $("#PresentUpazilaId").append('<option value=0>SELECT UPAZILA</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetPresentUpzillaByDistrictId", "CustomerAddress")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jasonData),
                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PresentUpazilaId").append('<option value=' +
                                    value.UpazilaId +
                                    '>' +
                                    value.UpazilaName +
                                    '</option>');
                            });
                    }

                });
        });
        $("#PermanentDistrictId").change(function () {
            $("#PermanentUpazillaId").empty();
            var perDistrict = $("#PermanentDistrictId").val();
            var jasonData = { districtId: perDistrict };
            $("#PermanentUpazillaId").append('<option value=0>SELECT UPAZILA</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetPermanentUpzillaByDistrictId", "CustomerAddress")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jasonData),
                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PermanentUpazillaId").append('<option value=' +
                                    value.UpazilaId +
                                    '>' +
                                    value.UpazilaName +
                                    '</option>');
                            });
                    }

                });
        });
            $("#PresentUpazilaId").change(function () {
                $("#PresentUnionParishadId").empty();
                var preUpazila = $("#PresentUpazilaId").val();
                var jasonData = { upazilaId: preUpazila };
                $("#PresentUnionParishadId").append('<option value=0>SELECT UP</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetPresentUnionByUpazillaId", "CustomerAddress")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jasonData),
                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PresentUnionParishadId").append('<option value=' +
                                    value.UnionParishadId +
                                    '>' +
                                    value.UnionParishadName +
                                    '</option>');
                            });
                    }

                });
        });
            $("#PermanentUpazillaId").change(function () {
                $("#PermanentUnionParishadId").empty();
                var perUpazila = $("#PermanentUpazillaId").val();
                var jasonData = { upazilaId: perUpazila };
                $("#PermanentUnionParishadId").append('<option value=0>SELECT UP</option>');
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("GetPermanentUnionByUpazillaId", "CustomerAddress")',
                    contentType: "application/json; charset=utf-8",
                    data: JSON.stringify(jasonData),
                    dataType: "json",
                    success: function(data) {
                        $.each(data,
                            function(key, value) {
                                $("#PermanentUnionParishadId").append('<option value=' +
                                    value.UnionParishadId +
                                    '>' +
                                    value.UnionParishadName +
                                    '</option>');
                            });
                    }

                });
        });

    });
    </script>

}
